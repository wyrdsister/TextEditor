<Window x:Class="SpicyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpicyEditor"

        mc:Ignorable="d"
        Title="SpicyEditor" Height="596.922" Width="867.164">
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                        Executed="CloseCommandHandler"/>
        <CommandBinding Command="ApplicationCommands.Delete"
                        Executed="DeleteCommandHandler"/>
        <CommandBinding Command="ApplicationCommands.Find"
                        Executed="FindCommandHandler"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Open file" Command="{Binding OpenCommand}" />
                <MenuItem Header="Save file" Command="{Binding SaveCommand}" />
                <MenuItem Header="Save file as" Command="ApplicationCommands.Close" IsEnabled="False" />
                <MenuItem Header="Prit" Command="ApplicationCommands.Print" />
                <Separator></Separator>
                <MenuItem Header="Exit" Command="ApplicationCommands.Close" />
            </MenuItem>
            <MenuItem Header ="Edit">
                <MenuItem Header="Copy" Command="ApplicationCommands.Copy" />
                <MenuItem Header="Paste" Command="ApplicationCommands.Paste" />
                <MenuItem Header="Cut" Command="ApplicationCommands.Cut" />
                <MenuItem Header="Undo" Command="ApplicationCommands.Undo" />
                <MenuItem Header="Redo" Command="ApplicationCommands.Redo" />
                <MenuItem Header="SelectAll" Command="ApplicationCommands.SelectAll" />
                <MenuItem Header="Delete" Command="ApplicationCommands.Delete" />
                <MenuItem Header="Find" Command="ApplicationCommands.Find" />
                <MenuItem Header="Replace" Command="ApplicationCommands.Replace" />
                <MenuItem Header="Help" Command="ApplicationCommands.Help" />
            </MenuItem >
        </Menu>
        <TextBox Name="TextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" MouseDoubleClick="TextBox_MouseDoubleClick_1" Text="{Binding MainText, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
